
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <link href="~/Content/Game/StyleSheet1.css" rel="stylesheet" />
    <title>Index</title>
    <style>
        li{
            list-style-type: none;
            margin-top: 20px;
        }
        ul{
            margin-left: 0;
            padding: 0;
        }
        button{
            width: 200px;
            height: 50px;
            font-size: 20pt;
        }
        .DifficultyList{
            text-align: center;
        }
    </style>
</head>
<body>
    <header style="height: 150px;">

    </header>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="DifficultyList">
                    <h1>Новая таблица судоку</h1>
                    @using (Html.BeginForm("CreateTheTable", "Home", FormMethod.Post))
                    {
                        <div style="margin-top:20px;">
                            <label>Введите количество значений, которые будут показаны</label><br/>
                            @Html.TextBox("level", null, new { @autocomplete = "off" })
                        </div>
                        <div style="margin-top:20px;">
                            <input type="submit" value="Создать таблицу" />
                        </div>
                        <div style="margin-top:20px;">
                            <h4>Ваш счет: @ViewBag.Score</h4>
                        </div>
                     
                        
                    }
                </div>
            </div>
        </div>
        <script>

        </script>
    </div>
</body>
</html>
