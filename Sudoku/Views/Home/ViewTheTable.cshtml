@model Sudoku.Models.SudokuTable

@{
    Layout = null;
}
@{ 
    string IsReadonly = "false";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <title>CreateTheTable</title>
    <style>
        .SudokuTable{
            text-align:center;
        }
    </style>
</head>
<body>
    <header style="height:150px;">

    </header>
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="SudokuTable">
                    @using (Html.BeginForm("CheckTheTable", "Home", FormMethod.Post))
                    {
                        <table style="max-width:500px; margin: auto;">

                            @for (int i = 0; i < 9; i++)
                            {
                                <tr>
                                    @for (int j = 0; j < 9; j++)
                                    {
                                    <td>
                                        @if (Model.Values[i, j].Hidden)
                                        {
                                            @Html.EditorFor(m => m.Values[i, j].Value, new
                                       {
                                           htmlAttributes = new
                                           {
                                               @class = "SudokuValues",
                                               @size = "1",
                                               @maxlength = "1",
                                               @type = "text",
                                               @Value = "",
                                               @autocomplete = "off"
                                           }
                                       })
                                        }
                                        else
                                        {
                                            if (!Model.Values[i, j].IsEditable)
                                            {
                                                @Html.EditorFor(m => m.Values[i, j].Value, new
                                           {
                                               htmlAttributes = new
                                               {
                                                   @class = "SudokuValues",
                                                   @size = "1",
                                                   @maxlength = "1",
                                                   @type = "text",
                                                   @readonly = "true"
                                               }
                                           })
                                            }
                                            else
                                            {
                                                @Html.EditorFor(m => m.Values[i, j].Value, new
                                               {
                                                   htmlAttributes = new
                                                   {
                                                       @class = "SudokuValues",
                                                       @size = "1",
                                                       @maxlength = "1",
                                                       @type = "text",
                                                       @autocomplete = "off" 
                                                   }
                                          })
                                            }


                                        }
                                    </td>
                                    }
                                </tr>
                            }

                        </table>
                        <input value="Проверить" type="submit" />
                    }
                    <script>

                    </script>
                </div>
            </div>
        </div>
        
    </div>
</body>
</html>
